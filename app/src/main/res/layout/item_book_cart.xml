<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="@dimen/common_padding">

    <ImageView
        android:id="@+id/img_book_cart"
        android:layout_width="120dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/img_book_cart"
        android:paddingStart="@dimen/common_padding"
        android:maxLines="2"
        android:text="Tên sách"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_book_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_book_name"
        android:layout_toEndOf="@id/img_book_cart"
        android:textColor="@color/red"
        android:paddingStart="@dimen/common_padding"
        android:text="50000" />

    <ImageView
        android:id="@+id/img_minus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/img_book_cart"
        android:src="@drawable/ic_baseline_remove_24"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/img_minus"
        android:gravity="center"
        android:textSize="20dp"
        android:paddingHorizontal="@dimen/common_padding"
        android:text="1"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/img_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/tv_number"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_add_24"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_baseline_delete_forever_24"
        app:tint="@color/black" />
</RelativeLayout>